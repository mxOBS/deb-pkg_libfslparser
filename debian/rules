#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# hack: will only work on OBS-created chroots
SOURCESDIR=/usr/src/packages/SOURCES/

NAME=libfslparser-4.0.2
MD5=3ac0d341003ffe8404fd84e36b23dc5a 

# generate configure flags
CONFFLAGS=
# armhf or armel?
ifeq (armhf,$(DEB_HOST_ARCH))
  CONFFLAGS += --enable-fhw
endif
ifeq (armel,$(DEB_HOST_ARCH))
  CONFFLAGS += --enable-fsw
endif

%:
	dh $@ --sourcedirectory=$(NAME)

build:
	find $(SOURCESDIR) -maxdepth 1 -iname "$(NAME).bin" -exec cp -v {} ./ \; || true
	./fetch.sh $(NAME).bin $(MD5)
	chmod +x $(NAME).bin
	./$(NAME).bin --auto-accept --force
	dh $@ --sourcedirectory=$(NAME)

	# linker config file
	cat ld.so.conf.in | sed -e "s;@PREFIX@;/usr;g" > libfslparser.conf

clean:
	rm -rf $(NAME) $(NAME).bin
	dh $@

override_dh_auto_configure:
	cd $(NAME); NOCONFIGURE=1 ./autogen.sh; cd ..
	dh_auto_configure -- $(CONFFLAGS)

override_dh_shlibdeps:
